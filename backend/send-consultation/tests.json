{
  "tests": [
    {
      "name": "OPTIONS request returns CORS headers",
      "method": "OPTIONS",
      "path": "/",
      "expectedStatus": 200
    },
    {
      "name": "POST with valid data returns success",
      "method": "POST",
      "path": "/",
      "body": {
        "name": "Иван Иванов",
        "phone": "+7 (921) 123-45-67"
      },
      "expectedStatus": 200,
      "expectedBody": {
        "success": true
      },
      "bodyMatcher": "partial"
    },
    {
      "name": "POST without name returns 400",
      "method": "POST",
      "path": "/",
      "body": {
        "phone": "+7 (921) 123-45-67"
      },
      "expectedStatus": 400
    }
  ]
}
